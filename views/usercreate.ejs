        // 赤くする　仮
        (function() {
            'use strict';

            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                // ループ
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        function monthday(year,month){
          let lastday = new Array('', 31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31);
          if ((year % 4 == 0 && year % 100 != 0) || year % 400 == 0){
            lastday[2] = 29;
          }
          return lastday[month];
        }
        function setDay(){
          const year = $('#inputBirthYear').val();
          const month = $('#inputBirthMonth').val();
          const day = $('#inputBirthDay').val();
          const lastday = monthday(year, month);
          let option = '';
          for (let i = 1; i <= lastday; i++) {
            if (i == day){
              option += '<option value="' + i + '" selected="selected">' + i + '</option>\n';
            }else{
              option += '<option value="' + i + '">' + i + '</option>\n';
            }
          }
          $('#inputBirthDay').html(option);
        }

        $('#inputBirthYear').change(function(){
          setDay();
        });
        $('#inputBirthMonth').change(function(){
          setDay();
        });
